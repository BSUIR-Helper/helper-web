%h1 Listing disciplines

%table
  %tr
    %th Name
    %th Abbr
    %th
    %th
    %th

  - @disciplines.each do |discipline|
    %tr
      %td= discipline.name
      %td= discipline.abbr
      %td= link_to 'Show', discipline
      %td
        - if policy(discipline).edit?
          = link_to 'Edit', edit_discipline_path(discipline)
      %td
        - if policy(discipline).destroy?
          = link_to 'Destroy', discipline, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

- if policy(Discipline).create?
  = link_to 'New Discipline', new_discipline_path
